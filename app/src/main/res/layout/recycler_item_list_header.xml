<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingStart="@dimen/default_element_margin"
              android:paddingEnd="@dimen/default_element_margin"
              android:paddingTop="@dimen/default_element_margin"
              android:paddingBottom="@dimen/default_element_margin">

    <TextView
            android:id="@+id/file_title"
            android:text="@string/header_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="@dimen/header_item_text_size"
            android:textStyle="bold" />
    <TextView
            android:id="@+id/file_filesize"
            android:text="@string/header_filesize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/header_item_text_size"
            android:textStyle="bold" />

</LinearLayout>